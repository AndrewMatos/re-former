

<%= form_for @user, url: {action: "update"}, html: {class:  "form_with_for"} do |f| %>
  
  <% if @user.errors.any? %>
   <div id= "error_explanation">
	   <h2>
	   	<%= pluralize(@user.errors.count, "error") %> prohibited from being saved
	   </h2>
	   <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li> <%=  message %> </li>
          <% end %>
	   </ul>
   </div>
  <% end %>
   


   Username:
   <%=f.text_field :username, value: @user.username%>
   <br>
   Email:
   <%=f.text_field :email, value: @user.email%>
   <br>
   Password:
   <%=f.password_field :password_digest %>
   <%= f.submit "Submit!!" %>
<% end %>